<h1><%= @cocktail.name %></h1>

<h3><ul><%@cocktail.doses.each do |dose|%>
    <li><%=dose.description + " " + dose.ingredient.name%> <%= link_to delete_dose_path(dose), method: :delete do %>

      <i class="fas fa-trash-alt trash-icon"></i>
     <% end %>
